{
  "manifest_version": 3,
  "name": "Shopify Knight",
  "description": "Shopify Dark Mode Extension",
  "author": "Gary Y",
  "version": "0.1",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://*.myshopify.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.myshopify.com/*"
      ],
      "js": [
        "scripts/index.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopify Knight"
  },
  "icons": {
    "16": "images/chirpy16.png",
    "32": "images/chirpy36.png",
    "48": "images/chirpy48.png",
    "128": "images/chirpy128.png"
  }
}
